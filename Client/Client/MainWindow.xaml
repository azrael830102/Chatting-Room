<Window x:Class="Client.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Client"
        mc:Ignorable="d"
        Title="Chatting room (Client)" Height="300" Width="530">
    <Grid>
        <TextBox Name="txtbox_msg" HorizontalAlignment="Left" Height="46" Margin="20,20,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="250" />
        <TextBox Name="txtbox_receive_msg" HorizontalAlignment="Center" Height="130" Margin="0,100,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="470" />
        
        <Button Content="Send" HorizontalAlignment="Left" Height="45" Margin="300,20,0,0" VerticalAlignment="Top" Width="84" Click="Send"/>
        <Button Content="Connect" HorizontalAlignment="Left" Height="45" Margin="400,20,0,0" VerticalAlignment="Top" Width="84" Click="Connect"/>
    </Grid>
</Window>
